# NutriTruth Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (change this in production!)
JWT_SECRET=nutritruth-secret-key-2024-change-this-in-production

# Database
DATABASE_PATH=./nutritruth.db

# Google Vision API (for OCR and barcode detection)
# Get your API key from: https://console.cloud.google.com/
GOOGLE_VISION_API_KEY=

# Google OAuth (for user authentication)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=260430884397-9f63mcjq8a4kbu2m1r949nrf1r9deid4.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=

# CORS Configuration
CORS_ORIGIN=http://localhost:8000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# API Configuration
API_TIMEOUT=30000

# Feature Flags
ENABLE_GOOGLE_VISION=false
ENABLE_N8N_INTEGRATION=false

# n8n Webhook URLs (optional)
N8N_OCR_WEBHOOK=
N8N_BARCODE_WEBHOOK=
N8N_LOOKUP_WEBHOOK=

# Open Food Facts API
OPEN_FOOD_FACTS_URL=https://world.openfoodfacts.org/api/v0

# Logging
LOG_LEVEL=info
